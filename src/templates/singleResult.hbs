<div class='country-wrapper'>
  <p class='country-name'>{{name}}</p>
  <p class='country-capital'>Capital: {{capital}}</p>
  <p class='country-languages-title'>Languages:</p>
  <ul class='country-languages'>
    {{#each languages}}
      <li class='language'>{{this.name}}</li>
    {{/each}}</ul>
  <img src={{flag}} alt='{{name}} national flag' width='240' class='country-flag' />
</div>